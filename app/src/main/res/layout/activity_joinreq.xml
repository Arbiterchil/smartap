<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".joinreq">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/realorange"
                android:layout_width="35dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingTop="10dp"
                    android:textSize="28dp"
                    android:id="@+id/mercury"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/white"
                    android:text="Group Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/gcid"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/white"
                    android:text="Group ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/profiless"
                android:layout_gravity="center"
                android:id="@+id/profile"
                android:layout_height="200dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Full Name"
                android:id="@+id/fulls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="205dp"
                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="20dp"
                        android:text="Total Grade"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_marginTop="30dp"
                        android:textSize="32sp"
                        android:text="0"
                        android:id="@+id/total"
                        android:layout_gravity="center"
                        android:textColor="@color/realorange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingTop="20dp"
                        android:textSize="20sp"
                        android:text="Final Grade"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="30dp"
                        android:textSize="32sp"
                        android:text="0"
                        android:id="@+id/remark"
                        android:layout_gravity="center"
                        android:textColor="@color/realorange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Show My Grade"
                android:textColor="@color/white"
                android:background="@color/realorange"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:id="@+id/surprise"
                android:layout_height="60dp" />














        </LinearLayout>





    </LinearLayout>
</ScrollView>