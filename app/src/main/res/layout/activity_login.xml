<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#444444"
    tools:context=".login">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/flower"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="smar"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Tap"
                android:textStyle="bold"
                android:textSize="32dp"
                android:textColor="#CF6F3F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/materialTextField2"
                android:layout_width="260dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_height="85dp"
                style="@style/spacestyle"
                android:orientation="horizontal"
                app:passwordToggleDrawable="@drawable/icon_select"
                app:passwordToggleTint="@color/white"
                android:textColorHint="@color/white"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/us"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Username"
                    style="@style/spacestyle"

                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/materialTextField"
                android:layout_width="260dp"
                style="@style/spacestyle"
                android:layout_height="85dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                app:passwordToggleEnabled="true"
                android:orientation="horizontal"
                app:passwordToggleDrawable="@drawable/icon_select"
                app:passwordToggleTint="#CF6F3F"
                android:textColorHint="@color/white"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pw"
                    style="@style/spacestyle"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignBottom="@+id/materialTextField"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forget"
                android:layout_width="129dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center"
                android:text="Forget Password?"
                android:textColor="@color/white" />
            <CheckBox
                android:layout_marginTop="30dp"
                android:id="@+id/rem"
                android:layout_width="137dp"
                android:layout_height="26dp"
                android:text="Remember Me:"
                android:buttonTint="#CF6F3F"
                android:textColor="@color/white" />
        </LinearLayout>

<LinearLayout
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="GO!"
        android:textSize="19sp"

        android:background="@drawable/buttonshape"
        android:textColor="@color/white" />



</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/reg"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#CF6F3F"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white" />
</RelativeLayout>
</LinearLayout>





</ScrollView>