<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".logins"
    >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progslog"
        android:layout_gravity="center"

        android:progressBackgroundTint="@color/ligthblue"
        android:backgroundTint="@color/ligthblue"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">


        <android.support.v7.widget.CardView
            android:layout_marginTop="30dp"
            android:id="@+id/linen"
            android:orientation="vertical"
            android:layout_width="320dp"
            android:layout_height="700dp"
            android:layout_gravity="center"
            android:background="@drawable/ttran"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp"
            android:paddingBottom="40dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"

                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/materialTextField2"
                    android:layout_width="300dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="65dp"
                    style="@style/spacestyle"
                    app:passwordToggleDrawable="@drawable/icon_select"
                    app:passwordToggleTint="@color/black"
                    android:textColorHint="@color/black"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/idnumer"
                        style="@style/spacestyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="number"
                        android:backgroundTint="@color/black"
                        android:hint="ID Number"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/materialTextField3"
                    android:layout_width="300dp"
                    style="@style/spacestyle"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="65dp"
                    app:passwordToggleDrawable="@drawable/icon_select"
                    app:passwordToggleTint="@color/black"
                    android:textColorHint="@color/black"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/flname"
                        style="@style/spacestyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/black"
                        android:hint="FirstName"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/materialTextField4"
                    android:layout_width="300dp"
                    style="@style/spacestyle"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="65dp"
                    app:passwordToggleDrawable="@drawable/icon_select"
                    app:passwordToggleTint="@color/black"
                    android:textColorHint="@color/black"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/lname"
                        style="@style/spacestyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/black"
                        android:hint="LastName"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/materialTextField5"
                    android:layout_width="300dp"
                    style="@style/spacestyle"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_height="65dp"
                    app:passwordToggleDrawable="@drawable/icon_select"
                    app:passwordToggleTint="@color/black"
                    android:textColorHint="@color/black"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/emailed"
                        style="@style/spacestyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/black"
                        android:hint="ex. Smartap@gmail.com"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/materialTextField"
                    android:layout_width="300dp"
                    style="@style/spacestyle"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="25dp"
                    app:passwordToggleDrawable="@drawable/icon_select"
                    app:passwordToggleTint="@color/black"
                    android:textColorHint="@color/black"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/passwords"
                        style="@style/spacestyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignBottom="@+id/materialTextField"
                        android:hint="Password / 8 letter required1"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/materialTextField01"
                    android:layout_width="300dp"
                    style="@style/spacestyle"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="25dp"
                    app:passwordToggleDrawable="@drawable/icon_select"
                    app:passwordToggleTint="@color/black"
                    android:textColorHint="@color/black"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pen"
                        style="@style/spacestyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignBottom="@+id/materialTextField"
                        android:hint="Confirm Password"

                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:backgroundTint="@color/black"
                        />
                </android.support.design.widget.TextInputLayout>
                <RadioGroup
                    android:id="@+id/rge"

                    android:layout_width="264dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <RadioButton
                        android:id="@+id/teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Teacher" />

                    <RadioButton
                        android:id="@+id/student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Student" />
                </RadioGroup>

                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/logs"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/color_button_default"
                    android:background="@drawable/exaround"
                    android:text="Sign Up"
                    android:textColor="#f7f7f7"
                    />
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    </ScrollView>
</FrameLayout>