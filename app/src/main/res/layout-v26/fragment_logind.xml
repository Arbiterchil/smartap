<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/testone"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".logind">
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="100dp"
        android:id="@+id/ima"
        android:src="@drawable/logofinal"

        android:layout_width="250dp"
        android:layout_height="250dp" />
    <ProgressBar
        android:layout_marginTop="200dp"
        android:id="@+id/proglog"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:backgroundTint="@color/ligthblue"
        android:progressBackgroundTint="@color/ligthblue" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="50dp"
        android:layout_height="wrap_content"
        >

      
         
  
        <android.support.v7.widget.CardView
            android:id="@+id/linen"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="310dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:backgroundTint="#80132040"
            app:cardCornerRadius="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="310dp"
            android:layout_height="330dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/materialTextField2"
                android:layout_width="290dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_height="85dp"
                style="@style/spacestyle"
                android:orientation="horizontal"
                app:passwordToggleDrawable="@drawable/icon_select"
                app:passwordToggleTint="@color/black"
                android:textColorHint="@color/white"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/us"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Email"
                    style="@style/spacestyle"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/materialTextField"
                android:layout_width="260dp"
                android:layout_height="85dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                app:passwordToggleEnabled="true"
                android:orientation="horizontal"
                style="@style/spacestyle"
                app:passwordToggleDrawable="@drawable/icon_select"
                app:passwordToggleTint="@color/white"
                android:textColorHint="@color/white"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/pw"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignBottom="@+id/materialTextField"
                    android:hint="Password"
                    style="@style/spacestyle"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/l"
                android:src="@drawable/ulol"
                android:layout_width="120dp"
                android:layout_height="120dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/forget"
            android:layout_width="129dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:text="Forget Password?"
            android:textColor="@color/white" />
        <CheckBox
            android:layout_marginTop="30dp"
            android:id="@+id/rem"
            android:layout_width="137dp"
            android:layout_height="26dp"
            android:text="Remember Me:"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white" />
        </LinearLayout>

        <!--<Button-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:id="@+id/l"-->
            <!--android:textSize="29dp"-->
            <!--android:text="SIGN IN"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@color/hira"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="138dp"-->
            <!--android:textColor="@color/white" />-->
    </LinearLayout>
    </ScrollView>


</FrameLayout>